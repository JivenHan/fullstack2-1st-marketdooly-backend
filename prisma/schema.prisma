// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id            Int       @id @default(autoincrement())
  name          String    @db.VarChar(100)
  price         Int
  discount      Int
  discountRate  Int       @map("discount_rate")
  cost          Int
  description   String    @db.VarChar(100)
  categoryId    Int       @map("category_id")
  subCategoryId Int       @map("sub_category_id")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime? @map("updated_at")

  category    Category    @relation(fields: [categoryId], references: [id])
  subCategory SubCategory @relation(fields: [subCategoryId], references: [id])
  image       Image[]
  @@map("products")
}

model Image {
  id                 Int       @id @default(autoincrement())
  imgUrl             String    @map("image_url") @db.VarChar(2000)
  mainbannerImgUrl   String    @map("mainbanner_image_url") @db.VarChar(2000)
  specialPriceImgUrl String    @map("specialPrice_image_url") @db.VarChar(2000)
  uplodedAt          DateTime  @default(now()) @map("uploded_at")
  productId          Int       @map("product_id")
  createdAt          DateTime  @default(now()) @map("created_at")
  updatedAt          DateTime? @map("updated_at")

  product Product @relation(fields: [productId], references: [id])
  @@map("images")
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @db.VarChar(30)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @map("updated_at")

  subCategory SubCategory[]
  product     Product[]
  @@map("categories")
}

model SubCategory {
  id         Int       @id @default(autoincrement())
  name       String    @db.VarChar(30)
  categoryId Int       @map("sub_category_id")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime? @map("updated_at")

  category Category  @relation(fields: [categoryId], references: [id])
  product  Product[]
  @@map("sub_categories")
}
